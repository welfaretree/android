<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.stac.welfaretree.activity.DetailWelfareActivity">

        <ImageView
            android:id="@+id/go_to_back_page"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="24dp"
            android:src="@drawable/back_to_go_colored"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/welfare_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="29dp"
            android:fontFamily="@font/apple_sd_gothic_neo_m"
            android:text="복지 이름"
            android:textColor="@color/view_pager_selected"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/go_to_back_page" />


        <ImageView
            android:id="@+id/detail_img_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/detail_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welfare_name" />

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/apple_sd_gothic_neo_m"
            android:text="복지 날짜 ~ 복지 날짜"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/detail_img_1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="225dp"
            android:fontFamily="@font/apple_sd_gothic_neo_m"
            android:text="20세"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/detail_img_2"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/detail_back"
            app:layout_constraintStart_toEndOf="@+id/detail_img_3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_info"
            android:layout_width="270dp"
            android:layout_height="115dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="300dp"
            android:fontFamily="@font/apple_sd_gothic_neo_m"
            android:text="한국어 입니다 한국어 입니다 한국어 입니다 한국어 입니다 한국어 입니다 한국어 입니다 한국어 입니다 한국어 입니다 "
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/detail_img_3"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/detail_img_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/detail_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_img_1" />

        <ImageView
            android:id="@+id/detail_img_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/detail_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_img_2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>